<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory android:title="Hospital Settings">

        <MultiSelectListPreference
            android:defaultValue="@array/donation_types"
            android:entryValues="@array/donation_types"
            android:entries="@array/donation_types_strings"
            android:key="donation_type"
            android:summary="Select what kind of donations you are currently accepting"
            android:title="Donation Type"
            app:icon="@drawable/ic_blood_drop" />

    </PreferenceCategory>


    <PreferenceCategory android:title="Information">

        <Preference
            android:id="@+id/hosp_settings_about"
            android:key="@string/about"
            android:summary="Licence information, Credits"
            android:title="@string/about"
            app:icon="@drawable/ic_baseline_info_24" />

        <Preference
            android:id="@+id/hosp_settings_oss"
            android:key="@string/settings_toolbar"
            android:summary="Information about the libraries we used"
            android:title="@string/settings_toolbar"
            app:icon="@drawable/ic_baseline_code_24" />

    </PreferenceCategory>

    <PreferenceCategory android:title="Account">
        <Preference
            android:id="@+id/hosp_settings_sign_out"
            android:key="@string/side_bar_signout"
            android:title="@string/side_bar_signout"
            app:icon="@drawable/ic_signout_24" />
    </PreferenceCategory>
</PreferenceScreen>