<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BloodDonationApp" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/changed_red</item>
        <item name="colorPrimaryVariant">@color/red_900</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.BloodDonationApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NoActionBar" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="DatePickerTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">@color/changed_red</item>
        <item name="colorPrimaryDark">@color/red_900</item>
        <item name="android:textColor">@color/red_900</item>
        <item name="colorAccent">@color/changed_red</item>
    </style>

    <style name="Theme.BloodDonationApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BloodDonationApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Theme.BloodCall.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.BloodCall.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>