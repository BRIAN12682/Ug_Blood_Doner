<resources>

    <style name="MainTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="colorPrimary">@color/changed_red</item>
        <item name="android:statusBarColor">@color/changed_red</item>
        <item name="colorAccent">@color/changed_red</item>
        <item name="snackbarStyle">@style/MySnackBarStyle</item>

    </style>

    <style name="LauncherTheme" parent="MainTheme">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AuxTheme" parent="Theme.MaterialComponents.Light">
        <item name="actionBarTheme">@style/ActionBarTheme</item>
        <item name="colorPrimary">@color/changed_red</item>
        <item name="android:statusBarColor">@color/changed_red</item>
        <item name="colorAccent">@color/changed_red</item>
    </style>

    <style name="ActionBarTheme" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:textColor">@color/black</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="MySnackBarStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:background">@color/changed_red</item>
    </style>


    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="Switch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">#66BB6A</item>

        <item name="trackColorActive">#66BB6A</item>

        <item name="colorSwitchThumbNormal">#f1f1f1</item>

        <item name="android:colorForeground">#f1f1f1</item>
    </style>


</resources>